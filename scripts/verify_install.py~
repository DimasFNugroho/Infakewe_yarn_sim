# scripts/verify_install.py
# Minimal smoke test for PyChrono + FEA module

try:
        import pychrono as chrono
        import pychrono.fea as fea
except Exception as e:
        print("PyChrono import failed:", e)
        raise SystemExit(1)

#print("Chrono version:", chrono.GetVersion())

# Build tiniest FEA object to ensure module availability
mesh = fea.ChMesh()
print("FEA mesh OK:", type(mesh).__name__)

# Extra: make a system to ensure core works
sys = chrono.ChSystemSMC()
print("System OK:", type(sys).__name__)
